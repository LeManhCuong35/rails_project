<p id="notice"><%= notice %></p>

<h1>Users</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= link_to user do %>
            <%= t "users.edit.show" %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_user_path(user) do %>
            <%= t "users.edit.edit" %>
          <% end %>
        </td>
        <td>
          <%= link_to user, method: :delete, data: { confirm: "Are you sure?" } do %>
            <%= t "users.edit.destroy" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_user_path do %>
  <%= t "users.edit.add" %>
<% end %>
