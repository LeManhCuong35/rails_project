<p id="notice"><%= notice %></p>
<% provide(:title, "Article" ) %>


<%= t ".Articles" %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td>
          <%= article.title %>
        </td>
        <td>
          <%= article.body %>
        </td>
        <td>
          <%= article.status %>
        </td>
        <td>
          <%= link_to article do %>
            <%= t "users.edit.show" %>
          <% end %>
        </td>
        <td>
          <%= link_to edit_article_path(article) do %>
            <%= t "users.edit.edit" %>
          <% end %>
        </td>
        <td>
          <%= link_to article, method: :delete, data: { confirm: "Are you sure?" } do %>
            <%= t "users.edit.destroy" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_article_path do %>
  <%= t "users.edit.add" %>
<% end %>
