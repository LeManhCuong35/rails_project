<%= form_for @article do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :title, placeholder: t("articles.new.title") %>
  </div>
  <div class="field">
    <%= f.text_area :body, placeholder: t("articles.new.body") %>
  </div>
  <span class="image">
    <%= f.file_field :image, accept: Settings.articles.image_type %>
  </span>
  <%= f.submit t("users.edit.submit_form"), class: "btn btn-primary" %>
<% end %>
